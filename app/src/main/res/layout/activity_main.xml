<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnBounce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bounce" />

            <Button
                android:id="@+id/btnFadeIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fade In" />

            <Button
                android:id="@+id/btnFadeOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fade Out" />

            <Button
                android:id="@+id/btnRotate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rotate" />

            <Button
                android:id="@+id/btnZoomIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ZoomIn" />

            <Button
                android:id="@+id/btnZoomOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zoom Out" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtBounce"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Bounce" />

            <TextView
                android:id="@+id/txtFadeIn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Fade In" />

            <TextView
                android:id="@+id/txtFadeOut"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Fade Out" />

            <TextView
                android:id="@+id/txtRotate"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Rotate" />

            <TextView
                android:id="@+id/txtZoomIn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Zoom In" />

            <TextView
                android:id="@+id/txtZoomOut"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ZoomOut" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnFrameAnimate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Frame Animate" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <ImageView
            android:id="@+id/imgFrameAnimate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:contentDescription="Egymást váltogató képek"
            android:scaleType="fitXY"
            android:layout_margin="40dp"/>

    </LinearLayout>
</LinearLayout>